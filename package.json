{
  "name": "mcp-sdk-ts",
  "version": "0.1.1",
  "description": "TypeScript SDK for building Model Context Protocol (MCP) servers with minimal boilerplate",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "dev": "npm run build && node dist/cli/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "sdk",
    "typescript",
    "server",
    "tools",
    "ai",
    "llm",
    "framework",
    "openapi",
    "zod",
    "schema-validation"
  ],
  "author": "Yash Gupta (https://github.com/gyash1512)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gyash1512/mcp-sdk-ts.git"
  },
  "bugs": {
    "url": "https://github.com/gyash1512/mcp-sdk-ts/issues"
  },
  "homepage": "https://github.com/gyash1512/mcp-sdk-ts#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "fastify": "^4.26.0",
    "js-yaml": "^4.1.0",
    "knex": "^3.1.0",
    "mysql2": "^3.9.1",
    "openapi-typescript": "^6.7.4",
    "ora": "^8.0.1",
    "pg": "^8.11.3",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "prompts": "^2.4.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.23",
    "@types/pg": "^8.11.0",
    "@types/prompts": "^2.4.9",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.20.6",
    "typescript": "^5.4.5"
  }
}
